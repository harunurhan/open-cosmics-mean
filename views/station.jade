doctype html
html
  head
    title= station.name
  body
    h2 #{station.name} (#{station.status})
    h3 #{station.subcluster}, #{station.cluster}, #{station.country}

    ul
      each event, i in station.events
        li 
            a(href='/api/stations/#{station._id}/events/#{i}')
              img(src= event.images.thumb)
            